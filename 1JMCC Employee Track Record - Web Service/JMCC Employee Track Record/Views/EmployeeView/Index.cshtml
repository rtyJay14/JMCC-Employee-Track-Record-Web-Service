@model IEnumerable<JMCC_Employee_Track_Record.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Full_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logout_Date)
        </th>
